   "source": [
    "## power of a number"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "9c6ee9ca",
   "metadata": {},
   "outputs": [],
   "source": [
    "def power(x,n):\n",
    "    if n==0:\n",
    "        return 1\n",
    "    return (x*power(x,n-1))"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "1d3dfa1f",
   "metadata": {},
   "outputs": [],
   "source": [
    "x = int(input(\"for x : \"))\n",
    "n=int(input(\"for n : \"))\n",
    "print(power(x,n))"
   ]
  }
